---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Catering Whangārei | Kai Boxes & Office Catering | Rumours on Rust";
const pageDesc = "Fresh catering in Whangārei. Kai Boxes, corporate morning teas, and function catering. Vegan and gluten-free options available.";

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "How much notice do you need for catering in Whangārei?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "The more notice the better, but we can sometimes squeeze in last-minute orders. Flick us a message and we'll see what we can do."
      }
    },
    {
      "@type": "Question",
      "name": "Do you deliver catering in Whangārei?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Pickup from our Rust Avenue café is standard. For larger orders, get in touch and we can chat about delivery options in Whangārei."
      }
    },
    {
      "@type": "Question",
      "name": "Can you cater for dietary requirements like vegan and gluten-free?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Absolutely. We offer vegan, gluten-free, vegetarian, and dairy-free catering options."
      }
    }
  ]
};

const howToSchema = {
  "@context": "https://schema.org",
  "@type": "HowTo",
  "name": "How to Order Catering from Rumours on Rust",
  "description": "Order fresh catering in Whangārei from Rumours on Rust café.",
  "step": [
    {
      "@type": "HowToStep",
      "position": 1,
      "name": "Get in Touch",
      "text": "Email or phone us with your headcount."
    },
    {
      "@type": "HowToStep",
      "position": 2,
      "name": "We Quote",
      "text": "We'll send options and pricing."
    },
    {
      "@type": "HowToStep",
      "position": 3,
      "name": "We Make It",
      "text": "Freshly made that morning on Rust Ave."
    },
    {
      "@type": "HowToStep",
      "position": 4,
      "name": "Pickup",
      "text": "Collect from the café or ask about delivery."
    }
  ]
};

const schemas = [faqSchema, howToSchema];
---

<Layout title={pageTitle} description={pageDesc} schemas={schemas}>
    
    <!-- HERO SECTION -->
    <header class="relative py-32 px-6 text-center text-white overflow-hidden min-h-[60vh] flex items-center justify-center">
        
        <!-- Hero Background Image: BAP.JPG -->
        <div class="absolute inset-0 z-0">
            <img
                src="/bap.webp"
                alt="Fresh Catering Baps and Rolls"
                class="w-full h-full object-cover"
            />
            <!-- Dark Overlay to make text pop -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/50 to-black/40"></div>
        </div>

        <!-- Content -->
        <div class="relative z-10 max-w-4xl mx-auto">
            <span class="inline-block py-1 px-4 border border-white/40 rounded-full text-white/90 text-sm tracking-[0.2em] uppercase mb-6 backdrop-blur-sm">
                Whangārei & Northland
            </span>
            <h1 class="font-serif text-5xl md:text-7xl mb-6 drop-shadow-xl">
                Catering Sorted.
            </h1>
            <p class="text-xl md:text-2xl font-light mb-8 text-white/90 drop-shadow-md max-w-2xl mx-auto leading-relaxed">
                Office morning teas. Christmas functions. Team lunches.<br/>
                <span class="font-bold text-rumours-highlight">We make the kai. You take the credit.</span>
            </p>
            <a href="#contact-catering" style="background-color: #C87946;" class="inline-block text-white font-bold py-4 px-10 rounded-full transition shadow-lg transform hover:-translate-y-1" onmouseenter="this.style.backgroundColor='white'; this.style.color='#2D3032';" onmouseleave="this.style.backgroundColor='#C87946'; this.style.color='white';">
                Get a Quote
            </a>
        </div>
    </header>

    <!-- INTRO -->
    <section class="py-16 px-6 max-w-3xl mx-auto text-center">
        <h2 class="font-serif text-3xl mb-6 text-rumours-dark">Kia Ora – Let Us Feed Your People</h2>
        <p class="text-lg text-gray-700 leading-relaxed mb-6">
            We do fresh catering from our little kitchen on Rust Ave—same quality as our café, just in bigger boxes.
            Our Kai Boxes are packed with good stuff made from scratch that morning. Think creamy pasta salads, kūmara and lentil bowls, buttery garlic ciabatta, and all the bits that make people go back for seconds.
        </p>
        <p class="font-bold text-rumours-rust">Vegan? Gluten-free? We've got you covered.</p>
    </section>

    <!-- CATERING GALLERY -->
    <section class="py-16 bg-rumours-cream px-6">
        <div class="max-w-6xl mx-auto">
            <h2 class="font-serif text-4xl text-center mb-12 text-rumours-dark">Our Catering Spreads</h2>
            <div class="grid md:grid-cols-3 gap-8">
                <div class="rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition">
                    <img src="/catering.webp" alt="Catering Display 1" class="w-full h-64 object-cover hover:scale-105 transition duration-700" />
                </div>
                <div class="rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition">
                    <img src="/catering2.webp" alt="Catering Display 2" class="w-full h-64 object-cover hover:scale-105 transition duration-700" style="object-position: center 90%;" />
                </div>
                <div class="rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition">
                    <img src="/catering3.webp" alt="Catering Display 3" class="w-full h-64 object-cover hover:scale-105 transition duration-700" />
                </div>
            </div>
        </div>
    </section>

    <!-- MENU GRID -->
    <section class="py-16 bg-white px-6">
        <div class="max-w-6xl mx-auto">
            <h2 class="font-serif text-4xl text-center mb-12 text-rumours-dark">Catering Options</h2>
            
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                
                <!-- CARD 1: Kai Boxes (Highlight Color) -->
                <div class="bg-rumours-highlight p-8 rounded-xl shadow-sm border border-orange-100">
                    <h3 class="font-serif text-2xl mb-4 text-rumours-dark font-bold">Kai Boxes</h3>
                    <p class="text-sm mb-4 italic">Perfect for office lunches & meetings.</p>
                    <ul class="space-y-2 text-gray-800">
                        <li>• Creamy Chicken Pasta Salad</li>
                        <li>• Cajun Kūmara & Lentil Salad</li>
                        <li>• Yogurt & Mint Dressing</li>
                        <li>• Buttery Garlic Ciabatta Bread</li>
                    </ul>
                </div>

                <!-- CARD 2: Morning Tea -->
                <div class="bg-rumours-cream p-8 rounded-xl shadow-sm border border-gray-100">
                    <h3 class="font-serif text-2xl mb-4 text-rumours-dark">Morning Tea</h3>
                    <p class="text-sm mb-4 italic">Corporate shouts & sweet treats.</p>
                    <ul class="space-y-2 text-gray-700">
                        <li>• Frittatas & Club Sandwiches</li>
                        <li>• Walnut Danishes</li>
                        <li>• Vegan Brownies</li>
                        <li>• Gluten-Free Muffins</li>
                    </ul>
                </div>

                <!-- CARD 3: Functions -->
                <div class="bg-rumours-cream p-8 rounded-xl shadow-sm border border-gray-100">
                    <h3 class="font-serif text-2xl mb-4 text-rumours-dark">Functions</h3>
                    <p class="text-sm mb-4 italic">End of year dos & events.</p>
                    <p class="text-gray-700 mb-4">
                        Christmas parties, client events, or special occasions. Tell us what you need, and we'll make it happen.
                    </p>
                    <p class="text-sm font-bold text-rumours-rust">Dairy-free available on request.</p>
                </div>

            </div>
        </div>
    </section>

    <!-- HOW IT WORKS -->
    <section class="py-16 bg-rumours-sage bg-opacity-30 px-6">
        <div class="max-w-4xl mx-auto">
            <h2 class="font-serif text-3xl mb-8 text-center text-rumours-dark">How to Order</h2>
            <div class="grid md:grid-cols-4 gap-6 text-center">
                <div class="bg-white p-6 rounded-lg shadow-sm">
                    <div class="text-4xl mb-2">1</div>
                    <h4 class="font-bold mb-2">Get in Touch</h4>
                    <p class="text-sm">Email or phone us with your headcount.</p>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-sm">
                    <div class="text-4xl mb-2">2</div>
                    <h4 class="font-bold mb-2">We Quote</h4>
                    <p class="text-sm">We'll send options and pricing.</p>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-sm">
                    <div class="text-4xl mb-2">3</div>
                    <h4 class="font-bold mb-2">We Make It</h4>
                    <p class="text-sm">Freshly made that morning on Rust Ave.</p>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-sm">
                    <div class="text-4xl mb-2">4</div>
                    <h4 class="font-bold mb-2">Pickup</h4>
                    <p class="text-sm">Collect from the café (or ask about delivery).</p>
                </div>
            </div>
        </div>
    </section>

    <!-- CONTACT CTA / FORM -->
    <section id="contact-catering" class="py-16 px-6 max-w-2xl mx-auto text-center">
        <h2 class="font-serif text-3xl mb-6">Ready to Sort Your Catering?</h2>
        <p class="mb-8 text-lg">Tell us what you need. We'll make it easy.</p>
        
        <div class="flex flex-col gap-4">
            <a href="mailto:rumours.on.rust@gmail.com" style="background-color: #2D3032;" class="text-white text-xl font-bold py-4 px-8 rounded-lg hover:bg-gray-700 transition">
                Email Us: rumours.on.rust@gmail.com
            </a>
            <a href="tel:0211345897" class="border-2 text-xl font-bold py-4 px-8 rounded-lg hover:bg-white transition" style="border-color: #2D3032; color: #2D3032;">
                Call: 021 134 5897
            </a>
        </div>
    </section>

    <!-- FAQ Section -->
    <section class="py-16 bg-white border-t border-gray-100 px-6">
        <div class="max-w-3xl mx-auto">
            <h2 class="font-serif text-2xl mb-8">Catering FAQs</h2>
            
            <details class="mb-4 border-b border-gray-200 pb-4 group">
                <summary class="font-bold cursor-pointer list-none flex justify-between items-center text-rumours-dark">
                    How much notice do you need?
                    <span class="text-rumours-rust transition group-open:rotate-180">▼</span>
                </summary>
                <p class="mt-2 text-gray-600">The more notice the better, but we can sometimes squeeze in last-minute orders. Flick us a message and we'll see what we can do.</p>
            </details>

            <details class="mb-4 border-b border-gray-200 pb-4 group">
                <summary class="font-bold cursor-pointer list-none flex justify-between items-center text-rumours-dark">
                    Do you deliver?
                    <span class="text-rumours-rust transition group-open:rotate-180">▼</span>
                </summary>
                <p class="mt-2 text-gray-600">Pickup from our Rust Avenue café is standard. For larger orders, get in touch and we can chat about delivery options in Whangārei.</p>
            </details>

            <details class="mb-4 border-b border-gray-200 pb-4 group">
                <summary class="font-bold cursor-pointer list-none flex justify-between items-center text-rumours-dark">
                    Dietary requirements?
                    <span class="text-rumours-rust transition group-open:rotate-180">▼</span>
                </summary>
                <p class="mt-2 text-gray-600">Absolutely. We offer vegan, gluten-free, vegetarian, and dairy-free catering options.</p>
            </details>
        </div>
    </section>

</Layout>